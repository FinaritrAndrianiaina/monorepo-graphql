{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "prisma",
    "**/*.spec.ts",
    "test/**"
  ]
}